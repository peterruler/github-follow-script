# GitHub API Configuration
# Create a personal access token at https://github.com/settings/tokens
# with 'user:follow' permissions and paste it here
GITHUB_TOKEN=your_github_token_here

# Follow criteria settings (optional - defaults are used if not set)
MAX_FOLLOWING=1000
MIN_FOLLOWERS=5
MAX_FOLLOWERS=1000
INACTIVITY_DAYS=60
FOLLOW_RATIO_THRESHOLD=1.2
MAX_FOLLOWS_PER_DAY=200
